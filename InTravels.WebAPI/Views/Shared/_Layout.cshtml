<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizations.Localization.SiteTitle - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(@Localizations.Localization.SiteTitle, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @using (Html.BeginForm("ChangeCulture", "Base"))
                        {
                            <select name="lang">
                                <option disabled selected>@Localizations.Localization.ChooseLang</option>
                                <option value="en">EN</option>
                                <option value="uk">UA</option>
                                <option value="ru">RU</option>
                            </select>
                            <input type="submit" name="submit" value="@Localizations.Localization.ChooseLang">}
                    </li>
                    <li></li>
                    <li>@Html.ActionLink(Localizations.Localization.Menu_Home_Link, "Index", "Home")</li>
                    <li>@Html.ActionLink(Localizations.Localization.Menu_About_Link, "About", "Home")</li>
                    <li>@Html.ActionLink(Localizations.Localization.Menu_Contacts_Link, "Contact", "Home")</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@string.Format(Localizations.Localization.Copyright_Format, DateTime.Now.Year)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
